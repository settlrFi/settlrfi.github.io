---
// src/pages/contacts.astro
import Layout from '../../layouts/BaseLayout.astro';
---

<Layout title="Settlr | Contacts">
  <section class="relative pt-32 pb-20 px-6">
    <div class="container mx-auto max-w-7xl text-center">
      <h1 class="text-6xl md:text-8xl font-black text-white tracking-tighter mb-8 drop-shadow-2xl">
        Get in <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-cyan-400">Touch</span>.
      </h1>
      <p class="text-xl md:text-2xl text-slate-300 max-w-3xl mx-auto leading-relaxed font-light">
        Interested in our market, liquidity or inventory risk model solutions? <br/>
        Start a conversation with our team.
      </p>
    </div>
  </section>

  <section class="pb-32 px-6">
    <div class="container mx-auto max-w-7xl">
      <div class="grid lg:grid-cols-2 gap-16 items-start">
        
        <div class="bg-slate-900/50 backdrop-blur-xl border border-white/10 p-10 rounded-3xl shadow-2xl relative overflow-hidden">
          
          <div id="successMessage" class="absolute inset-0 bg-slate-900/95 z-20 flex flex-col items-center justify-center text-center p-8 transition-all duration-500 opacity-0 pointer-events-none translate-y-4">
            <div class="w-20 h-20 rounded-full bg-emerald-500/20 flex items-center justify-center mb-6 text-emerald-400 border border-emerald-500/30 shadow-[0_0_30px_rgba(16,185,129,0.3)]">
                <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path></svg>
            </div>
            <h3 class="text-3xl font-bold text-white mb-2">Message Sent!</h3>
            <p class="text-slate-400">Our team will get back to you shortly.</p>
            <button onclick="resetForm()" class="mt-8 text-indigo-400 hover:text-white font-bold transition-colors">Send another message</button>
          </div>

          <div id="errorMessage" class="absolute inset-0 bg-slate-900/95 z-20 flex flex-col items-center justify-center text-center p-8 transition-all duration-500 opacity-0 pointer-events-none translate-y-4">
             <div class="w-20 h-20 rounded-full bg-red-500/20 flex items-center justify-center mb-6 text-red-400 border border-red-500/30">
                 <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12"></path></svg>
             </div>
             <h3 class="text-3xl font-bold text-white mb-2">Error</h3>
             <p class="text-slate-400">Something went wrong. Please try again later.</p>
             <button onclick="retryForm()" class="mt-8 text-red-400 hover:text-white font-bold transition-colors">Try again</button>
           </div>

          <form id="contactForm" method="POST" class="space-y-8 transition-all duration-500">
            <input type="hidden" name="_template" value="table"> <input type="hidden" name="_subject" value="New Inquiry from Settlr Website">
            <input type="hidden" name="_captcha" value="false"> <div class="grid md:grid-cols-2 gap-8">
              <div class="space-y-2">
                <label class="text-sm font-bold text-slate-400 uppercase tracking-wider">First Name</label>
                <input required name="name" type="text" class="w-full bg-slate-950/50 border-b-2 border-slate-700 focus:border-indigo-500 px-4 py-3 text-white outline-none transition-colors rounded-t-lg" placeholder="Mary" />
              </div>
              <div class="space-y-2">
                <label class="text-sm font-bold text-slate-400 uppercase tracking-wider">Last Name</label>
                <input required name="surname" type="text" class="w-full bg-slate-950/50 border-b-2 border-slate-700 focus:border-indigo-500 px-4 py-3 text-white outline-none transition-colors rounded-t-lg" placeholder="Power" />
              </div>
            </div>

            <div class="space-y-2">
              <label class="text-sm font-bold text-slate-400 uppercase tracking-wider">Email Address</label>
              <input required name="email" type="email" class="w-full bg-slate-950/50 border-b-2 border-slate-700 focus:border-indigo-500 px-4 py-3 text-white outline-none transition-colors rounded-t-lg" placeholder="mary@institution.com" />
            </div>

            <div class="space-y-2">
              <label class="text-sm font-bold text-slate-400 uppercase tracking-wider">Message</label>
              <textarea required name="message" rows="4" class="w-full bg-slate-950/50 border-b-2 border-slate-700 focus:border-indigo-500 px-4 py-3 text-white outline-none transition-colors rounded-t-lg resize-none" placeholder="Tell us about your infrastructure needs..."></textarea>
            </div>

            <button id="submitBtn" type="submit" class="group relative w-full py-5 rounded-xl bg-indigo-600 hover:bg-indigo-500 text-white font-bold text-lg tracking-wide transition-all shadow-lg hover:shadow-indigo-500/30 overflow-hidden disabled:opacity-70 disabled:cursor-not-allowed">
              <span id="btnText" class="relative z-10 flex items-center justify-center gap-2">Send Message</span>
              
              <span id="btnLoader" class="absolute inset-0 flex items-center justify-center bg-indigo-600 z-20 hidden">
                 <svg class="animate-spin h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                   <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                   <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                 </svg>
              </span>
            </button>
          </form>
        </div>

        <div class="space-y-12 py-6">
          
          <div>
            <h3 class="text-3xl font-bold text-white mb-6">Headquarters</h3>
            <p class="text-lg text-slate-400 mb-2">Settlr</p>
            <p class="text-lg text-slate-400">Piazza dei Cavalieri, 7</p>
            <p class="text-lg text-slate-400">56126 <strong class="text-white">Pisa (PI), Italy</strong></p>
          </div>

          <div>
             <h3 class="text-3xl font-bold text-white mb-6">Direct Channels</h3>
             <ul class="space-y-4">
               <li class="flex items-center gap-4">
                 <div class="w-12 h-12 rounded-full bg-indigo-500/10 flex items-center justify-center text-indigo-400">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                 </div>
                 <a href="mailto:info@settlr.io" class="text-xl text-slate-200 hover:text-indigo-400 transition-colors">TBA</a>
               </li>
               <li class="flex items-center gap-4">
                 <div class="w-12 h-12 rounded-full bg-emerald-500/10 flex items-center justify-center text-emerald-400">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                 </div>
                 <span class="text-xl text-slate-200">Scuola Normale Superiore</span>
               </li>
             </ul>
          </div>

          <div class="p-6 rounded-2xl bg-gradient-to-br from-indigo-900/40 to-slate-900/40 border border-white/10">
            <p class="text-slate-300 italic">
              "We bridge the gap between quantitative finance and market DeFi infrastructure."
            </p>
          </div>

        </div>
      </div>
    </div>
  </section>

  <script is:raw>
    // ---------------------------------------------------------
    //  CONFIGURAZIONE EMAIL
    //  Sostituisci questa email con la tua per ricevere i messaggi
    // ---------------------------------------------------------
    const endpoint = "https://formsubmit.co/ajax/francesco.tarantell3@unibo.it"; 
    // ---------------------------------------------------------

    const form = document.getElementById('contactForm');
    const successMsg = document.getElementById('successMessage');
    const errorMsg = document.getElementById('errorMessage');
    const btn = document.getElementById('submitBtn');
    const btnText = document.getElementById('btnText');
    const btnLoader = document.getElementById('btnLoader');

    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // 1. UI Loading State
        btn.disabled = true;
        btnText.classList.add('opacity-0');
        btnLoader.classList.remove('hidden');

        // Raccolta dati form
        const formData = new FormData(form);

        try {
            // 2. Invio reale via Fetch (AJAX)
            const response = await fetch(endpoint, {
                method: "POST",
                body: formData
            });

            if (response.ok) {
                // SUCCESS
                form.style.opacity = '0';
                form.style.filter = 'blur(10px)';
                successMsg.classList.remove('opacity-0', 'pointer-events-none', 'translate-y-4');
                form.reset();
            } else {
                // ERROR HTTP
                throw new Error("Server error");
            }

        } catch (error) {
            // ERROR NETWORK
            console.error(error);
            form.style.opacity = '0';
            form.style.filter = 'blur(10px)';
            errorMsg.classList.remove('opacity-0', 'pointer-events-none', 'translate-y-4');
        } finally {
            // Reset bottone
            btn.disabled = false;
            btnText.classList.remove('opacity-0');
            btnLoader.classList.add('hidden');
        }
    });

    // Funzione reset (Successo)
    window.resetForm = function() {
        successMsg.classList.add('opacity-0', 'pointer-events-none', 'translate-y-4');
        form.style.opacity = '1';
        form.style.filter = 'none';
    }

    // Funzione retry (Errore)
    window.retryForm = function() {
        errorMsg.classList.add('opacity-0', 'pointer-events-none', 'translate-y-4');
        form.style.opacity = '1';
        form.style.filter = 'none';
    }
  </script>

</Layout>