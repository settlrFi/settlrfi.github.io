  <script>
    const revealTargets = document.querySelectorAll('.reveal');
    const roadmapBar = document.querySelector('.roadmap-bar');
    const counters = document.querySelectorAll('.metric-count');
    const donuts = document.querySelectorAll('.donut');
    const bars = document.querySelectorAll('.bar-fill');

    function animateCounter(el) {
      if (el.dataset.done === '1') return;
      el.dataset.done = '1';

      const target = Number(el.dataset.target || 0);
      const decimals = Number(el.dataset.decimals || 0);
      const prefix = el.dataset.prefix || '';
      const suffix = el.dataset.suffix || '';
      const duration = 1100;
      const startTime = performance.now();

      function tick(now) {
        const p = Math.min((now - startTime) / duration, 1);
        const eased = 1 - Math.pow(1 - p, 3);
        const value = target * eased;
        const formatted = value.toLocaleString('en-US', {
          minimumFractionDigits: decimals,
          maximumFractionDigits: decimals,
        });
        el.textContent = `${prefix}${formatted}${suffix}`;
        if (p < 1) requestAnimationFrame(tick);
      }

      requestAnimationFrame(tick);
    }

    function animateDonut(el) {
      if (el.dataset.done === '1') return;
      el.dataset.done = '1';

      const targetDeg = Number(el.dataset.deg || 0);
      const color = el.dataset.color || '#38bdf8';
      const duration = 900;
      const start = performance.now();

      el.style.setProperty('--color', color);

      function frame(now) {
        const p = Math.min((now - start) / duration, 1);
        const eased = 1 - Math.pow(1 - p, 3);
        const deg = targetDeg * eased;
        el.style.setProperty('--deg', `${deg}deg`);
        if (p < 1) requestAnimationFrame(frame);
      }

      requestAnimationFrame(frame);
    }

    function animateBars(scope) {
      const targetBars = scope ? scope.querySelectorAll('.bar-fill') : bars;
      targetBars.forEach((bar) => {
        if (bar.dataset.done === '1') return;
        bar.dataset.done = '1';
        const width = Number(bar.dataset.width || 0);
        const color = bar.dataset.color;
        if (color) bar.style.background = color;
        requestAnimationFrame(() => {
          bar.style.width = `${width}%`;
        });
      });
    }

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (!entry.isIntersecting) return;
          const section = entry.target;

          section.classList.add('is-visible');
          section.querySelectorAll('.metric-count').forEach(animateCounter);
          section.querySelectorAll('.donut').forEach(animateDonut);
          animateBars(section);

          if (section.querySelector('.roadmap-bar') && roadmapBar) {
            roadmapBar.classList.add('is-animated');
          }

          observer.unobserve(section);
        });
      },
      { threshold: 0.16 }
    );

    revealTargets.forEach((el) => observer.observe(el));
